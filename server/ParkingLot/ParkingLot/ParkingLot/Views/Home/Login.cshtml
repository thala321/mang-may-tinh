@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Phần mềm quản lý bãi xe</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/css/login-style.css" rel="stylesheet" type="text/css" />
    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/spinner-style.css" rel="stylesheet" asp-append-version="true"/>
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <!-- /google fonts-->
    <style>
        .hidden{
            display:none !important;
        }

        ul{
            list-style:none;
        }

        .validation-summary-errors ul li {
            font-size: 20px;
            color: #fc3955;
            margin-top: 20px;
            display: inline-block;
            width: 100%;
        }
    </style>
</head>


<body>
    <section id="spinner_layout" class="spinner-layout hidden">
        <div class="spinner-box">
            <img src="~/images/spinner.gif">
            <h2 id="progress_status">Đang xử lý...</h2>
        </div>
    </section>
    <h1>Đăng nhập hệ thống</h1>
    <div class=" w3l-login-form">
        <form id="login_form" method="POST">
            <div class=" w3l-form-group">
                <label for="username">Tài khoản:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input id="username" type="text" class="form-control" placeholder="Nhập tài khoản" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label for="password">Mật khẩu:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input id="password" type="password" class="form-control" placeholder="Nhập mật khẩu" required="required"  />
                </div>
            </div>
            <button type="submit">Đăng nhập</button>
        </form>
    </div>
    <script src="~/js/module.login.js" asp-append-version="true"></script>
</body>

</html>
